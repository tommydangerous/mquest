<div class="userNav">
	<ul>
		<li><%= link_to 'View All', url_for(params.merge({view_all: 1})) %></li>
	</ul>
</div>
<%= render 'shared/search' %>
<div class="pageContent">
	<p class="pageHeader"><%= @title %>: <%= @search.size %></p>
	<div class="index">
		<% @requests_by_date.each do |date, requests| %>
			<div class="indexDate">
				<p class="indexDateHeader">
					<%= link_to date.strftime('%B %d, %y'), root_path(date: "#{date.strftime('%y-%m-%d')}") %>
				</p>
				<%= render partial: 'requests/request', collection: requests, as: :request %>
			</div>
		<% end %>
	</div>
	<%= will_paginate @requests, separator: '' %>
</div>