<% if @conflicts.size == 0 || @half_day == 1 || @purpose.try(:ignore_max_off) %>
  $('.flash').remove();
  $('.requestForm .action input').removeClass('disabledConflict');
<% else %>
  $('.flash').remove();
  $('.content').prepend("<%= j render partial: 'message', locals: { message: @message } %>");
  $('.requestForm .action input').addClass('disabledConflict');
<% end %>