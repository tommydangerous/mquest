<div class="request department" id="department_<%= department.id %>">
	<div class="eventEdit">
		<%= link_to 'Edit', edit_department_path(department) %>
	</div>
	<div class="requestUser">
		<%= link_to department.name, edit_department_path(department) %>
	</div>
	<div class="requestInfo">
		<div>
			<p class="requestLabel">Max Off:</p>
			<p class="requestData"><%= department.max_off %></p>
			<div class="clear"></div>
		</div>
		<div>
			<p class="requestLabel"><%= link_to 'Users', users_department_path(department) %></p>
			<p class="requestData"><%= department.users.size %></p>
			<div class="clear"></div>
		</div>
	</div>
	<div class="clear"></div>
</div>