<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<%= stylesheet_link_tag    "application" %>
		<%= stylesheet_link_tag    "print/application", media: :print %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
		<%= favicon_link_tag 'favicon.ico' %>
		<meta charset="UTF-8">
		<%= yield :head %>
		<style>
			@page {
				margin-left: 0mm;
				margin-right: 0mm;
			}
		</style>
	</head>
	<body>
		<div class="header">
			<%= render 'layouts/header' %>
		</div>
		<%= yield %>
		<div class="footer">

		</div>
	</body>
</html>