<div class="request user" id="user_<%= user.id %>">
	<div class="eventEdit">
		<%= link_to 'Edit', edit_user_path(user) %>
		<% if current_user.master? %>
			<%= link_to 'Delete', user, method: :delete, confirm: 'Delete user?' %>
		<% end %>
	</div>
	<div class="requestUser">
		<%= link_to user.name, user %>
	</div>
	<div class="requestInfo">
		<div>
			<p class="requestLabel">Dept:</p>
			<p class="requestData"><%= link_to user.department.name, users_department_path(user.department) %></p>
			<div class="clear"></div>
		</div>
		<div>
			<p class="requestLabel">Email:</p>
			<p class="requestData"><%= mail_to user.email, user.email %></p>
			<div class="clear"></div>
		</div>
		<div>
			<p class="requestLabel">Last In:</p>
			<p class="requestData">
				<%= user.last_in.strftime('%b %d, %y') %> at
				<%= user.last_in.strftime('%l:%M %p') %>
			</p>
			<div class="clear"></div>
		</div>
		<div>
			<p class="requestLabel">In Count:</p>
			<p class="requestData"><%= user.in_count %></p>
			<div class="clear"></div>
		</div>
	</div>
	<div class="clear"></div>
</div>