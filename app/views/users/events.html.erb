<%= render 'user_nav' %>
<%= render 'event_search' %>
<div class="pageContent">
	<p class="pageHeader"><%= @user.first_name %>: <%= pluralize(@search.size, "#{params[:search]} Event") %> - <%= pluralize(@hours, 'Hour') %></p>
	<div class="index">
		<% @events_by_date.each do |date, events| %>
			<div class="indexDate">
				<p class="indexDateHeader">
					<%= link_to date.strftime('%B %d, %y'), root_path(date: "#{date.strftime('%y-%m-%d')}") %>
				</p>
				<%= render partial: 'shared/user_event', collection: events, as: :event %>
			</div>
		<% end %>
	</div>
	<%= will_paginate @events, separator: '' %>
</div>
<div class="overlay userOverlay">
	<%= link_to image_tag('/assets/close.png'), '#', class: 'closeOverlay' %>
	<%= image_tag @user.photo.url, class: 'userPhoto' %>
</div>